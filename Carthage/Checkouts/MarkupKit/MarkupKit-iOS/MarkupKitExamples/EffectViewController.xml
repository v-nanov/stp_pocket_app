<LMLayerView layoutMarginsRelativeArrangement="false">
    <UIImageView image="sample.jpg" contentMode="scaleAspectFill"/>

    <LMRowView>
        <LMLayerView weight="0.4">
            <UIVisualEffectView style="extraLightBlurEffectView"/>

            <LMColumnView layoutMargins="12" backgroundColor="#00aa0022">
                <UILabel text="An extra-light blur effect view over an image view" textColor="#002200aa"
                    textAlignment="center" numberOfLines="0"/>
            </LMColumnView>
        </LMLayerView>

        <LMSpacer weight="0.6"/>
    </LMRowView>
</LMLayerView>
