<LMLayerView layoutMarginsRelativeArrangement="false" backgroundColor="#ffffff">
    <LMScrollView fitToWidth="true">
        <LMColumnView layoutMargins="10">
            <UILabel id="label1" numberOfLines="0" lineBreakMode="byWordWrapping"/>
            <UILabel id="label2" numberOfLines="0" lineBreakMode="byWordWrapping"/>
        </LMColumnView>
    </LMScrollView>

    <LMColumnView>
        <LMSpacer/>

        <LMColumnView layoutMargins="20">
            <UIButton style="systemButton" title="Press Me!"
                backgroundColor="#ffffffee" contentEdgeInsets="16" clipsToBounds="true"
                layer.borderColor="#808080"
                layer.borderWidth="0.5"
                layer.cornerRadius="6"
                onPrimaryActionTriggered="showGreeting"/>
        </LMColumnView>
    </LMColumnView>
</LMLayerView>
